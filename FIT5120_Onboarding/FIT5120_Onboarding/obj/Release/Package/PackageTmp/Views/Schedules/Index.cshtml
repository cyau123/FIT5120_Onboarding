@model IEnumerable<FIT5120_Onboarding.Models.Schedule>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CollectionDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NextWaste)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NextRecycle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NextGreen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CollectionDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NextWaste)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NextRecycle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NextGreen)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@Html.TextBox("addressEntered")
<div>@ViewBag.Address.AddressEntered</div>
